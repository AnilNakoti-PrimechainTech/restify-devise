{
  "name": "restify-devise",
  "version": "0.0.1",
  "description": "Starter project for a rest api with restify & node-devise",
  "private": true,
  "scripts": {
    "postinstall": "npm run build",
    "start": "node dist",
    "clean": "rm -rf dist",
    "mfy": "minify dist -d dist",
    "build": "babel . --out-dir dist --ignore Procfile,node_modules,test,*.spec.js,*.json,*.sh --no-comments --copy-files",
    "lint": "eslint .",
    "dev": "NODE_ENV=development nodemon .",
    "test": "NODE_ENV=test mocha lib src",
    "test:file": "NODE_ENV=test mocha"
  },
  "keywords": [
    "restify",
    "render",
    "joi",
    "passport",
    "jwt",
    "i18n",
    "mongodb",
    "mongoose",
    "authentication",
    "api",
    "boilerplate",
    "es6"
  ],
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carvalhoviniciusluiz/restify-devise.git"
  },
  "author": "Carvalho, Vinicius Luiz <carvalho.viniciusluiz@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carvalhoviniciusluiz/restify-devise/issues"
  },
  "homepage": "https://github.com/carvalhoviniciusluiz/restify-devise#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-minify": "^0.3.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "cli-table": "^0.3.1",
    "co-mocha": "^1.2.2",
    "dirty-chai": "^2.0.1",
    "dotenv": "^5.0.1",
    "eslint": "^4.19.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "faker": "^4.1.0",
    "mocha": "^5.0.4",
    "nodemon": "^1.17.3",
    "pre-commit": "^1.2.2",
    "sinon": "^4.5.0",
    "sinon-chai": "^3.0.0"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.2.1",
    "accept-language": "^3.0.18",
    "assert-plus": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.1",
    "chalk": "^2.3.2",
    "compression": "^1.7.2",
    "email-templates": "^3.5.2",
    "helmet": "^3.12.0",
    "i18next": "^10.6.0",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.5",
    "moment": "^2.22.0",
    "mongoose": "^5.0.14",
    "mongoose-timestamp": "^0.6.0",
    "node-devise": "^0.1.2",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "restify": "^7.1.0",
    "restify-errors": "^6.0.0",
    "restify-joi-middleware": "^5.0.0",
    "restify-render-middleware": "^1.0.1",
    "winston": "^2.4.1"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
